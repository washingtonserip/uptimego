{
  "family": "uptimego-api-task-definition",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::<yourId>:role/uptimego_api_execution_role",
  "containerDefinitions": [
    {
      "name": "uptimego-api-container",
      "image": "<yourId>.dkr.ecr.us-east-2.amazonaws.com/uptimego_api:latest",
      "cpu": 256,
      "memory": 512,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ]
    }
  ]
}
